@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<h2>Fornecedores</h2>

<div class="form-horizontal" style="background-color: aliceblue;">
    <fieldset>
        <div class="row margem-lrtp-20">
            <div class="col-md-2 margem-lr-10">
                <div class="form-group">
                    Nome
                    @Html.TextBox("FiltroNome", null, htmlAttributes: new { @class = "form-control ntooltip", title = "Informe o nome ou parte do nome." })
                </div>
            </div>

            <div class="col-md-2 margem-lr-10">
                <div class="form-group">
                    Cpf/Cnpj
                    @Html.TextBox("FiltroCpfCnpj", null, htmlAttributes: new { @class = "form-control ntooltip", title = "Informe o Cnpj ou parte do Cnpj." })
                </div>
            </div>

            <div class="col-md-2 margem-lr-10">
                <div class="form-group">
                    Data inicial
                    @Html.TextBox("FiltroDataInicial", null, htmlAttributes: new { @class = "form-control ntooltip", title = "Informe o período inicial.", type = "date" })
                </div>
            </div>

            <div class="col-md-2 margem-lr-10">
                <div class="form-group">
                    Data final
                    @Html.TextBox("FiltroDataFinal", null, htmlAttributes: new { @class = "form-control ntooltip", title = "Informe o período final.", type = "date" })
                </div>
            </div>

            <div class="container" style="margin-top: 20px;">
                <button type="button" class="btn btn-warning ntooltip limpar" title="Limpar campos">
                    <span class="glyphicon glyphicon-refresh"></span>
                </button>

                <button type="button" class="btn btn-primary ntooltip pesquisar" title="Pesquisar">
                    <span class="glyphicon glyphicon-search"></span> Pesquisar
                </button>
                <button type="button" class="btn btn-info ntooltip create" title="Cadastra novo fornecedor">
                    <span class="glyphicon glyphicon-plus"></span> Cadastrar
                </button>
            </div>
        </div>
    </fieldset>
</div>


<div id="divListaFornecedor">
</div>

<!-- Modal -->
<div class="modal fade" id="modal">
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")

<script src="~/Scripts/App/Fornecedor.js"></script>
}
