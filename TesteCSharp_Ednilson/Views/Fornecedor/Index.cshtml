@model TesteCSharp_Ednilson.Models.FornecedorIndexViewModel

@{
    // Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
    // Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<h2>Fornecedores</h2>

@using (Ajax.BeginForm("GetLista", "Fornecedor",
    new AjaxOptions
    {
        HttpMethod = "POST"
        //, InsertionMode = InsertionMode.ReplaceWith
        , UpdateTargetId = "divListaFornecedor"
        // ,LoadingElementDuration = 100
        // ,OnComplete = "CarregaLista"
    },
    new { id = "formFornecedor" }
    ))
{
<div class="form-horizontal" style="background-color: aliceblue;">
    <fieldset>
        <div class="row margem-lrtp-20">
            <div class="col-md-2 margem-lr-10">
                <div class="form-group">
                    @Html.LabelFor(model => model.FiltroNome)
                    @Html.EditorFor(model => model.FiltroNome, new { htmlAttributes = new { @class = "form-control ntooltip", title = "Informe o nome ou parte do nome." } })
                </div>
            </div>

            <div class="col-md-2 margem-lr-10">
                <div class="form-group">
                    @Html.LabelFor(model => model.FiltroCpfCnpj)
                    @Html.EditorFor(model => model.FiltroCpfCnpj, new { htmlAttributes = new { @class = "form-control ntooltip", title = "Informe o nome ou parte do nome." } })
                </div>
            </div>

            <div class="col-md-2 margem-lr-10">
                <div class="form-group">
                    @Html.LabelFor(model => model.FiltroDataInicial)
                    @Html.EditorFor(model => model.FiltroDataInicial, new { htmlAttributes = new { @class = "form-control ntooltip", title = "Informe o nome ou parte do nome.", type = "date" } })
                </div>
            </div>

            <div class="col-md-2 margem-lr-10">
                <div class="form-group">
                    @Html.LabelFor(model => model.FiltroDataFinal)
                    @Html.EditorFor(model => model.FiltroDataFinal, new { htmlAttributes = new { @class = "form-control ntooltip", title = "Informe o nome ou parte do nome.", type = "date" } })
                </div>
            </div>

            <div class="container" style="margin-top: 25px;">
                <button type="button" class="btn btn-warning ntooltip limpar" title="Reiniciar pesquisa">
                    <span class="glyphicon glyphicon-refresh"></span>
                </button>

                <button type="submit" class="btn btn-primary ntooltip" title="Pesquisar">
                    <span class="glyphicon glyphicon-search"></span> Pesquisar
                </button>
                <button type="button" class="btn btn-info ntooltip create" title="Cadastra novo fornecedor">
                    <span class="glyphicon glyphicon-plus"></span> Cadastrar
                </button>
            </div>
        </div>
    </fieldset>
</div>
}

<div id="divListaFornecedor">
</div>

<!-- Modal -->
<div class="modal fade" id="modal">
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")

    <script src="~/Scripts/App/Fornecedor.js"></script>
}
